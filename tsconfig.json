{
	"$schema": "https://json.schemastore.org/tsconfig",
	
	"compilerOptions": {
	  "baseUrl": ".",
	  "inlineSourceMap": true,
	  "inlineSources": true,
	  "module": "ESNext",
	  "target": "ES2020",
	  "allowJs": true,
	  "noImplicitAny": true,
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "allowSyntheticDefaultImports": true,
	  "importHelpers": true,
	  "lib": [
		"DOM",
		"ES2020",
		"ES2021"
	  ]
	},
	"include": [
	  "**/*.ts"
	]
  }
  